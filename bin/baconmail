#!/usr/bin/env ruby
# encoding: UTF-8
$:.unshift(File.dirname(__FILE__) + '/../lib')

require 'rubygems'
require 'yaml'
require 'baconmail'

if ARGV[0]
  case ARGV[0]
  when "process"
    Baconmail::Settings.instance.accounts.each do |account|
      Baconmail::Inbox.new(account).process_inbox!
    end
  when "digest"
    Baconmail::Settings.instance.accounts.each do |account|
      Baconmail::Digest.new(account).daily_digest
    end
  when "authorize"
    Baconmail::Settings.instance.accounts.each do |account|
      Baconmail::Authorizer.call(account.username)
    end
  end
else
  puts "baconmail [process | digest | authorize]"
end
